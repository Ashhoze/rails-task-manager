<h1> <%= @task.title %> </h1>
<h2> <%= @task.details %></h2>
<p><%= @task.completed %></p>

<%= link_to "back to the list", tasks_path %>
<%= link_to "edit the task?", edit_path(@task) %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
